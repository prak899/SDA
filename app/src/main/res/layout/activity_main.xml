<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="-362dp"
        tools:listitem="@layout/recycler_view"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="Do you want to turn on sync"
        app:layout_constraintBaseline_toBottomOf="@id/recyclerData"
        android:layout_marginTop="30dp"
        android:padding="25dp"
        android:id="@+id/syncing"
        android:paddingTop="50dp"/>
    <TextView
        android:text="@string/app_name"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:id="@+id/countDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBottomOf="@id/syncing"/>
</androidx.constraintlayout.widget.ConstraintLayout>